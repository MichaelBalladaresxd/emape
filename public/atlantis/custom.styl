$danger = red
$primary = #1D3557
$secondary = #457B9D
$sm = 576px


.sidebar
	
	.user
		.info
			a
				white-space initial
	
.wrapper-login
	display flex
	justify-content center
	align-items center
.container-login
.container-signup
	max-width 400px
	background-color white
	padding 40px 25px
.container-registro
	max-width 650px
	background-color white
	padding 40px 25px


		
.reversed
	padding 3rem 0 0 0
	.control-label
		margin -4.5rem 0 0 0
		float left
input
	&.is-valid
		~ label
			color green!important
	&.is-invalid
		~ label
			color lighten($danger, 20)!important
			
.form-control
	border-color #b5b5b5

div
	&.dataTables_wrapper
		div
			&.dataTables_length
				select
					width: 75px!important
.dtrg-group
	td
		height 30px
	&.dtrg-level-0
		td
			background-color $primary !important
			color white
	&.dtrg-level-1
		td
			padding-left 2em !important
			background-color $secondary !important
			color white
		
.table
	th
		padding 0 25px 0px 10px!important 
	td
		padding 5px 10px !important
		&.control
			padding 0 10px 0px 30px!important
	&.dataTable
		tbody
			>tr
				&.selected,
				>.selected
					background-color rgba($primary, 0.5)
					

.montoTotalStyle
	background #F1F1F1
	font-size 2.5em!important
	text-align right
	max-width 250px
	width 100%
	position relative
	z-index 1
	
.trPago
	&.active
		cursor pointer
	&.disabled
		cursor not-allowed
		background-color #e8e8e8!important
		

.terminosCondition
	max-height 150px
	overflow auto

button
	&.start-js-btn
		background none !important
		padding 0
		height auto
		font-weight bold
		display block
		width 100% !important
		padding 13px
		&:before
			content "Pagar ahora"
			font-weight 400
		&.modal-opener
			&.default
				background #2C3E50 !important
				cursor pointer
				height 43.78px
				&:hover
					background darken(#2C3E50, 5) !important
					

.ricvIcon
	width 80px
	height 80px
	display flex
	justify-content center
	align-items center
	border-radius 50%
	span
		color white
	&.aprove
		background #5fa55a
	&.denny
		background #fa5457




#viewLogin
	.dl
		height 100%
		transition all 0.5s ease-in
		@media only screen and (max-width: $sm) 
			height 30%
			transition all 0.5s ease-in
		.dlt
			height 75%
			transition all 0.5s ease-in
			@media only screen and (max-width: $sm) 
				height 100%
				transition all 0.5s ease-in
		.dlb
			height 25%
			transition all 0.5s ease-in
			@media only screen and (max-width: $sm) 
				height 0%
				transition all 0.5s ease-in
	.dr
		height 100%
		transition all 0.5s ease-in
		@media only screen and (max-width: $sm) 
			height 60%
			transition all 0.5s ease-in
			

.card-noticias
	.imgNoticia
		width 100%
		height 200px
		img
			width 100%
			height 100%
			-o-object-fit cover
			object-fit cover